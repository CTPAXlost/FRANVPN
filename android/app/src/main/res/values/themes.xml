<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base theme - Dark red & black -->
    <style name="Theme.FRANVPN" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary red -->
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryVariant">@color/primary_red_dark</item>
        
        <!-- Secondary gray -->
        <item name="colorSecondary">@color/secondary_gray</item>
        <item name="colorSecondaryVariant">@color/secondary_light_gray</item>
        
        <!-- Text and background -->
        <item name="colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorError">@color/status_error</item>
        <item name="android:colorBackground">@color/background_dark</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="27">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/primary_black</item>
        
        <!-- Material Design 3 colors -->
        <item name="colorOnPrimary">@color/accent_white</item>
        <item name="colorOnSecondary">@color/accent_white</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnError">@color/accent_white</item>
        
        <!-- Component styles -->
        <item name="buttonStyle">@style/Widget.FRANVPN.Button</item>
        <item name="android:editTextStyle">@style/Widget.FRANVPN.EditText</item>
    </style>
    
    <!-- Button style -->
    <style name="Widget.FRANVPN.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/accent_white</item>
        <item name="backgroundTint">@color/primary_red</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <!-- EditText style -->
    <style name="Widget.FRANVPN.EditText" parent="Widget.MaterialComponents.TextInputEditText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>
    
    <!-- Card style -->
    <style name="Widget.FRANVPN.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface_variant</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>
    
    <!-- Connect button (large, prominent) -->
    <style name="Widget.FRANVPN.ConnectButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:textColor">@color/accent_white</item>
        <item name="backgroundTint">@color/primary_red</item>
        <item name="cornerRadius">80dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
